{
  "name": "pkarr",
  "version": "1.2.0",
  "description": "client, server and CLI for public-key addressable resource records",
  "type": "module",
  "main": "index.js",
  "browser": {
    "./lib/dht.js": "./lib/dht.browser.js"
  },
  "types": "types/index.d.ts",
  "bin": {
    "pkarr": "bin.js"
  },
  "scripts": {
    "lint": "standard --fix",
    "start": "node start.js",
    "test": "brittle test/* --cov",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:esm": "tsc --outDir dist/esm --module esnext",
    "build": "npm run build:cjs && npm run build:esm",
    "fullcheck": "npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run fullcheck"
  },
  "files": [
    "index.js",
    "lib",
    "bin.js",
    "relayed.js",
    "types",
    "!**/*.tsbuildinfo"
  ],
  "keywords": [],
  "author": "Nuh (@nuhvi)",
  "license": "MIT",
  "dependencies": {
    "bencode": "^3.0.3",
    "bittorrent-dht": "^11.0.4",
    "chalk": "^5.2.0",
    "dns-packet": "^5.6.1",
    "graceful-goodbye": "^1.3.0",
    "sodium-universal": "^4.0.0",
    "z32": "^1.0.0"
  },
  "devDependencies": {
    "@types/dns-packet": "^5.6.1",
    "brittle": "^3.2.1",
    "node-fetch": "^3.3.1",
    "standard": "^17.0.0",
    "typescript": "^5.2.2"
  }, 
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },  
  "standard": {
    "ignore": [
      "dist/"
    ]
  }
}
